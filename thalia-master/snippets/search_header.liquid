{% assign layout = section.settings.header_layout | strip %}

<div style="position: absolute;left: 0px;top: 50%;transform: translateY(-30%);" class="column">
  <div class="search-container">
    <i class="ion-ios-search-strong"></i>
    <div class="search-content">
      <div class="container">
        <div id="search">
          <input style="border:0px!important" type="text" name="q" id="text-search" value="{{ search.terms | escape }}" placeholder="What are you looking for?" class="form-control input-lg" aria-label="What are you looking for?" />
          <button type="button" class="btn btn-default btn-lg">
            <i style="height: 35px;
    width: 35px;
    position: absolute;
    top: 0px;
    left: 100%;
    z-index: 500;
    background: url(https://api.iconify.design/ion-ios-search-strong.svg) no-repeat center center / contain;
" class="ion-ios-search-strong"></i>
          </button>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
    $(document).ready(function() {
      $('.search-container > i').click(function(){
        $(".search-content").slideToggle();
        $(this).toggleClass("ion-ios-search-strong ion-android-close")
      });
    });
  </script>
</div>
