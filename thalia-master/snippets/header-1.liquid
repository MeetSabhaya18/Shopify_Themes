<!-- Header -->
<header style="height:185px;" class="header1">
  <!-- Header desktop -->
  <style>
   @media only screen and (max-width: 600px) {
  .hidemob {
    display:none;
  }
     .item-menu-mobile {
      text-align:center; 
     }
     .topbar-email, .topbar-child1{color:white;}
     .topbar-social-item {color:white;}
} 
  </style>
  <div class="column hidemob">
    <div class="container" style="position:relative;z-index:51;">
    <div class="topbar">
      <div class="topbar-social">
        <div class="topbar-language rs1-select2" id="form-currency">
          {% include 'header-currency' %}
        </div>
        <div class="header-quick-links">|</div>
        {% include 'social-button-header' %}
      </div>
      <span class="topbar-child1">
        {% if section.settings.show_email %}
        <span class="topbar-email">
          {{ section.settings.header_email_text }}
        </span>
        {% endif %}
      </span>
      <div class="topbar-child2">
        {% if section.settings.use_top_bar %}
        {{ section.settings.top_bar_message }}
        {% endif %}
      </div>
    </div>
    <div class="wrap_header">
      <!-- Logo -->
      {% include 'search_header' %}
      <style>
        .menu .logo{left:50%;transform: translate(-50%,-50%);}
        .black a{color:white!important;}
      </style>
      <!-- Menu -->
      <div class="wrap_menu">
        <nav class="menu">
          {% include 'logo' %}
        </nav>
      </div>
      <!-- Header Icon -->
      <div class="header-icons">
        {% if shop.customer_accounts_enabled %}
            {% if customer %}
              <a href="/account" class="header-wrapicon1 dis-block">
                <img src="{{ 'locked.svg' | asset_url }}" class="header-icon1" alt="ICON">
              </a>
              <div class="header-dropdwn">
                <a href="/account/logout">{{ 'customer.login.logout' | t }}</a>
              </div><!-- header-dropdwn -->
            {% else %}
              <a href="/account/login" class="header-wrapicon1 dis-block">
                <img src="{{ 'locked.svg' | asset_url }}" class="header-icon1" alt="ICON">
              </a>
            {% endif %}
        {% endif %}

        <span class="linedivide1"></span>
        <div class="header-wrapicon2">
          {% include 'header-cart' %}
        </div>
      </div>
    </div>
    </div>
    <div style="background-color:{{ settings.color_bottom_header }};color:white;position:relative;z-index:50;" class="black">
      {% include 'main-menu' %}
    </div>
    
  </div>
  <!-- Header Mobile -->
  <div class="wrap_header_mobile">
    <!-- Logo moblie -->
    {% if section.settings.logo %}
    <a href="/" class="logo-mobile">
      <img src="{{ section.settings.logo | img_url: 'master' }}" alt="{{ section.settings.logo.alt | default: shop.name }}">
    </a>
    {% endif %}
    <!-- Button show menu -->
    <div class="btn-show-menu">
      <!-- Header Icon mobile -->
      <div class="header-icons-mobile">
        {% if shop.customer_accounts_enabled %}
            {% if customer %}
              <a href="/account" class="header-wrapicon1 dis-block">
                <img src="{{ 'locked.svg' | asset_url }}" class="header-icon1" alt="ICON">
              </a>
            {% else %}
              <a href="/account/login" class="header-wrapicon1 dis-block">
                <img src="{{ 'locked.svg' | asset_url }}" class="header-icon1" alt="ICON">
              </a>
            {% endif %}
        {% endif %}

        <span class="linedivide2"></span>
        {% include 'header-cart-mob' %}
      </div>
      <div class="btn-show-menu-mobile hamburger hamburger--squeeze">
        <span class="hamburger-box">
          <span class="hamburger-inner"></span>
        </span>
      </div>
    </div>
  </div>
  <!-- Menu Mobile -->
  <div class="wrap-side-menu" >
    <nav class="side-menu">
      <ul style="height:800px;background-color:{{ settings.color_skin }};overflow-y:hidden;" class="main-menu">
        <li class="item-topbar-mobile p-l-20 p-t-8 p-b-8">
          <span class="topbar-child1">
            {% if section.settings.use_top_bar %}
            {{ section.settings.top_bar_message }}
            {% endif %}
          </span>
        </li>
        <li class="item-topbar-mobile p-l-20 p-t-8 p-b-8">
          <div class="topbar-child2-mobile">
            {% if section.settings.show_email %}
            <span class="topbar-email">
              {{ section.settings.header_email_text }}
            </span>
            {% endif %}


          </div>
        </li>
        <li class="item-topbar-mobile p-l-10">
          <div class="topbar-social-mobile">
            {% include 'social-button-header' %}
          </div>
        </li>
        {% include 'header-mob-nav' %}
      </ul>
    </nav>
  </div>
</header>
