<style>
  #shopify-section-{{ section.id }} {
    margin-top: {{ section.settings.top-margin }}px;
    margin-bottom: {{ section.settings.bottom-margin }}px;
  }
</style>
<!-- Banner2 -->
{% include "deals-layout1" %}
{% schema %}
{
   "name": "Deal of the day",
   "max_blocks": 1,
   "settings": [
     {
          "type": "range",
          "id": "top-margin",
          "min": 0,
          "max": 200,
          "step": 2,
          "default": 0,
          "label": "Top Margin"
    },
    {
          "type": "range",
          "id": "bottom-margin",
          "min": 0,
          "max": 200,
          "step": 2,
          "default": 0,
          "label": "Bottom margin"
    },
	{
        "type": "color",
        "id": "background_color",
        "label": "Background Colour",
        "default": "#F7F2EE"
      },
	{
      "type": "image_picker",
      "id": "image",
      "label": "Collection image",
	  "info": "1020x1173px"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Ad Heading"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Ad subheading"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Ad link text"
    },
    {
    "type": "url",
    "id": "link",
    "label": "Image URL"
    }
   ],
   "blocks": [
      {
         "type": "deal",
         "name": "deal product",
         "settings": [
            {
               "type": "product",
               "id": "product_deal",
               "label": "Product"
            },
            {
              "type": "checkbox",
              "id": "custom_image",
              "label": "Set custom image?",
              "default": true
            },
			{
              "type": "color",
              "id": "product_color",
              "label": "Price Background Colour",
              "default": "#BE8445"
            },
            {
              "type": "image_picker",
              "id": "product_image",
              "label": "Product image",
              "info": "1000x1000px"
            },
            {
                "type": "checkbox",
                "id": "timer",
                "label": "Enable/disable timer",
                "default": true
              },
            {
               "type": "text",
               "id": "expiry_deal",
               "label": "Expiry",
               "info": "(yyyy,mm,dd)"
            }
         ]
      }
   ],
   "presets": [
      {
         "name": "Deals section",
         "category": "Collection",
         "blocks": [
            {
               "type": "deal"
            },
            {
               "type": "deal"
            }
         ]
      }
   ]
}
{% endschema %}
