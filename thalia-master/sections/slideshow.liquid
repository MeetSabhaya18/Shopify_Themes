<style>
  #shopify-section-{{ section.id }} {
    margin-top: {{ section.settings.top-margin }}px;
    margin-bottom: {{ section.settings.bottom-margin }}px;
  }
</style>
{% include "slider-1" %}
{% schema %}
{
  "name": "Slideshow",
  "class": "index-section index-section--flush",
  "max_blocks": 7,
  "settings": [
        {
          "type": "range",
          "id": "top-margin",
          "min": 0,
          "max": 200,
          "step": 2,
          "default": 0,
          "label": "Top Margin"
        },
    {
          "type": "range",
          "id": "bottom-margin",
          "min": 0,
          "max": 200,
          "step": 2,
          "default": 0,
          "label": "Bottom margin"
        },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Auto-rotate slides",
      "default": true
    },
    {
      "type": "select",
      "id": "autoplay_speed",
      "label": "Change slides every",
      "options": [
        { "value": "5000", "label": "5 seconds" },
        { "value": "6000", "label": "6 seconds" },
        { "value": "7000", "label": "7 seconds" },
        { "value": "8000", "label": "8 seconds" },
        { "value": "9000", "label": "9 seconds" },
        { "value": "10000", "label": "10 seconds" }
      ],
      "default": "10000"
    },
	{
        "type": "select",
        "id": "layout_slider",
        "label": "Select page slider",
        "options": [
              {
                "value": "slider-1",
                "label": "Slider 1"
              },
			  {
                "value": "slider-2",
                "label": "Slider 2"
              },
			  {
                "value": "slider-3",
                "label": "Slider 3"
              }
            ]	
        }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Slide image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "1920x570px recommended"
        },
        {
          "type": "select",
          "options": [
            {
              "group": "alignement",
              "value": "flex-start",
              "label": "Left"
            },
            {
              "group": "alignement",
              "value": "center",
              "label": "Center"
            },
            {
              "group": "alignement",
              "value": "flex-end",
              "label": "Right"
            }
          ],
          "id": "textbox-alignment",
          "default": "center",
          "label": "Textbox horizontal alignment"
        },
        {
          "type": "select",
          "options": [
            {
              "group": "alignement",
              "value": "flex-start",
              "label": "Top"
            },
            {
              "group": "alignement",
              "value": "center",
              "label": "Center"
            },
            {
              "group": "alignement",
              "value": "flex-end",
              "label": "Bottom"
            }
          ],
          "id": "textbox-vertical-alignment",
          "default": "center",
          "label": "Textbox vertical alignment"
        },
        {
          "type": "range",
          "id": "horizontal-offset",
          "min": -50,
          "max": 50,
          "step": 1,
          "default": 0,
          "label": "Horizontal offset"
        },
        {
          "type": "range",
          "id": "vertical-offset",
          "min": -50,
          "max": 50,
          "step": 1,
          "default": 0,
          "label": "Vertical offset"
        },
        {
          "type": "select",
          "options": [
            {
              "group": "alignement",
              "value": "left",
              "label": "Left"
            },
            {
              "group": "alignement",
              "value": "center",
              "label": "Center"
            },
            {
              "group": "alignement",
              "value": "right",
              "label": "Right"
            }
          ],
          "id": "text-alignment",
          "default": "center",
          "label": "Text alignment"
        },
		{
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
		{
          "type": "select",
          "id": "heading_appear",
          "label": "Animation style",
            "options": [
              {
                "value": "none",
                "label": "None"
              },
              {
                "value": "fadeInDown",
                "label": "fadeInDown"
              },
              {
                "value": "fadeInUp",
                "label": "fadeInUp"
              },
              {
                "value": "zoomIn",
                "label": "zoomIn"
              },
              {
                "value": "rollIn",
                "label": "rollIn"
              },
              {
                "value": "lightSpeedIn",
                "label": "lightSpeedIn"
              },
              {
                "value": "slideInUp",
                "label": "slideInUp"
              },
              {
                "value": "rotateInDownLeft",
                "label": "rotateInDownLeft"
              },
              {
                "value": "rotateInUpRight",
                "label": "rotateInUpRight"
              },
              {
                "value": "rotateIn",
                "label": "rotateIn"
              }
            ],
		  "default": "fadeInDown"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading"
        },
		{
          "type": "select",
          "id": "subheading_appear",
          "label": "Animation style",
            "options": [
              {
                "value": "none",
                "label": "None"
              },
              {
                "value": "fadeInDown",
                "label": "fadeInDown"
              },
              {
                "value": "fadeInUp",
                "label": "fadeInUp"
              },
              {
                "value": "zoomIn",
                "label": "zoomIn"
              },
              {
                "value": "rollIn",
                "label": "rollIn"
              },
              {
                "value": "lightSpeedIn",
                "label": "lightSpeedIn"
              },
              {
                "value": "slideInUp",
                "label": "slideInUp"
              },
              {
                "value": "rotateInDownLeft",
                "label": "rotateInDownLeft"
              },
              {
                "value": "rotateInUpRight",
                "label": "rotateInUpRight"
              },
              {
                "value": "rotateIn",
                "label": "rotateIn"
              }
            ],
		  "default": "fadeInDown"
        },		
		{
          "type": "text",
          "id": "slide_link_text",
          "label": "Link Text"
        },
        {
          "type": "url",
          "id": "slide_link",
          "label": "Link URL"
        },
		{
          "type": "select",
          "id": "slide_appear",
          "label": "Animation style",
            "options": [
              {
                "value": "none",
                "label": "None"
              },
              {
                "value": "fadeInDown",
                "label": "fadeInDown"
              },
              {
                "value": "fadeInUp",
                "label": "fadeInUp"
              },
              {
                "value": "zoomIn",
                "label": "zoomIn"
              },
              {
                "value": "rollIn",
                "label": "rollIn"
              },
              {
                "value": "lightSpeedIn",
                "label": "lightSpeedIn"
              },
              {
                "value": "slideInUp",
                "label": "slideInUp"
              },
              {
                "value": "rotateInDownLeft",
                "label": "rotateInDownLeft"
              },
              {
                "value": "rotateInUpRight",
                "label": "rotateInUpRight"
              },
              {
                "value": "rotateIn",
                "label": "rotateIn"
              }
            ],
		  "default": "fadeInDown"
        }
      ]
    }
  ],
  "presets": [{
    "name": "Slideshow",
    "category": "Image",
    "settings": {
      "autoplay": true,
      "autoplay_speed": "5000"
    },
    "blocks": [
      {
        "type": "image"
      },
      {
        "type": "image"
      }
    ]
  }]
}
